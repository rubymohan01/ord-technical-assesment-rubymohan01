<%= turbo_frame_tag 'tab-content' do %>
  <div class="p-4 shadow-xl">
    <div class="grid grid-cols-12 bg-gray-500 items-center">
      <h2 class="col-start-1 col-span-3 text-lg left font-bold mb-4 px-5 py-5 text-white"><%= "#{agency.name}(#{agency.email})"%>
        </br>
        website: <span class="underline"><%= link_to agency.website, agency.website %></span>
        </br>
        address: <span><%= agency.full_address %></span>
        </br>
        contact us: <span><%= agency.phone %></span>
      </h2>
      <%= link_to 'Back', agencies_path, data: { turbo_stream: true, turbo_frame: 'tab-content' }, class: 'col-start-10 rounded mr-5 bg-white text-gray-500 h-[50px] px-3 py-3 font-bold' %>
      <%= link_to '+ New Agent', new_agent_path(agency_id: agency.id), data: { turbo_stream: true, turbo_frame: 'tab-content' }, class: 'col-end-13 col-span-2 rounded mr-5 bg-white text-gray-500 h-[50px] px-3 py-3 font-bold' %>
    </div>
    <table class="table-fixed w-full text-sm mt-5">
      <thead>
        <tr>
          <th class="py-5">Name</th>
          <th class="py-5">Email</th>
          <th class="py-5">Phone</th>
          <th class="py-5">Agent ID</th>
          <th class="py-5">Actions</th>
        </tr>
      </thead>
      <tbody id="agents-list">
        <% agency.agents.each do |agent|%>
          <%= render 'agents/agent', agent: agent, agency: agency %>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>