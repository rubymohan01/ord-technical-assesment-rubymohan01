<tr id="employee_<%= employee.id %>" class="mb-4">
  <td class="text-center"><%= "#{employee.first_name} #{employee.last_name}" %></td>
  <td class="text-center"><%= employee.email %></td>
  <td class="text-center"><%= employee.phone %></td>
  <td class="text-center"><%= employee.ref_code %></td>
  <td class="flex justify-evenly">
    <%#= link_to employee_path(employee), data: { turbo_stream: true, turbo_frame: 'tab-content' }, class: 'mr-5 bg-white text-gray-500 h-[50px] px-3 py-3 font-bold' do %>
      <%#= heroicon "eye", variant: :solid, options: { class: "h-6 w-6 text-blue-500" } %>
    <%# end %>
    <%= link_to edit_employee_path(employee), data: { turbo_stream: true, turbo_frame: 'tab-content' }, class: 'mr-5 bg-white text-gray-500 h-[50px] px-3 py-3 font-bold' do %>
      <%= heroicon "pencil", variant: :solid, options: { class: "h-6 w-6 text-blue-500" } %>
    <% end %>
    <%= link_to employee_path(employee), method: :delete, data: { turbo_method: :delete, turbo_stream: true, turbo_frame: 'tab-content' }, class: 'mr-5 bg-white text-gray-500 h-[50px] px-3 py-3 font-bold' do %>
      <%= heroicon "trash", variant: :solid, options: { class: "h-6 w-6 text-blue-500" } %>
    <% end %>
  </td>
</tr>