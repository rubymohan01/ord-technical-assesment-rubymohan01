<tr id="agent_<%= agent.id %>" class="mb-4">
  <td class="text-center"><%= "#{agent.first_name} #{agent.last_name}" %></td>
  <td class="text-center"><%= agent.email %></td>
  <td class="text-center"><%= agent.phone %></td>
  <td class="text-center"><%= agent.ref_code %></td>
  <td class="flex justify-evenly">
    <%#= link_to agent_path(agent), data: { turbo_stream: true, turbo_frame: 'tab-content' }, class: 'mr-5 bg-white text-gray-500 h-[50px] px-3 py-3 font-bold' do %>
      <%#= heroicon "eye", variant: :solid, options: { class: "h-6 w-6 text-blue-500" } %>
    <%# end %>
    <%= link_to edit_agent_path(agent), data: { turbo_stream: true, turbo_frame: 'tab-content' }, class: 'mr-5 bg-white text-gray-500 h-[50px] px-3 py-3 font-bold' do %>
      <%= heroicon "pencil", variant: :solid, options: { class: "h-6 w-6 text-blue-500" } %>
    <% end %>
    <%= link_to agent_path(agent), method: :delete, data: { turbo_method: :delete, turbo_stream: true, turbo_frame: 'tab-content' }, class: 'mr-5 bg-white text-gray-500 h-[50px] px-3 py-3 font-bold' do %>
      <%= heroicon "trash", variant: :solid, options: { class: "h-6 w-6 text-blue-500" } %>
    <% end %>
  </td>
</tr>